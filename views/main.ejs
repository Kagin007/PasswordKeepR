<!DOCTYPE html>
<html lang="en">
  <link rel="stylesheet" href="/styles/main.css">

  <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
  <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>

  <style>

    button {
      background-color: rgb(91, 84, 80);
      font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
        "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
      font-size: 24px;
    }
    form,
    h2 {
      text-align: center;
      padding: 10px;
    }
  </style>

  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />

    <title>Login Smart-ToDo-List</title>

    <script type="text/javascript" src="../dragRows.js"></script>

    <script>
      $(document).ready(function() {

        $('#movies, #restaurants, #books, #products').sortable({
        connectWith: '.sortable',
        items: 'tr:not(:first)',
        cursor: 'move',
        helper: 'clone',
        update: function(event, ui) {
          let data = $(this).sortable('serialize');

          $.ajax({
            data: data,
            type: 'POST',
            url: '/todo/'
          })
        }
        }).disableSelection()
      })
      </script>

  </head>

  <body>
    <%- include('partials/header'); %>
    <h2>To Do List</h2>
    <form action="/api/todos/todo/"
    method="POST">
      <input type="text" name="todoitem" placeholder="Enter your To Do" />

      <button type="submit" class="btn btn-outline-primary">Add</button>
    </form>

<div class='main-body'>
  <div class="container" >
    <table>
      <tbody id="movies" class="sortable">

        <tr>
          <th> <a> Film/ Tv Series </a> </th>
        </tr>
        <% for(let index in movie) { %>
        <tr>
          <td>
            To watch <%= movie[index].description %>
          <td>
            <form method="POST" action="/api/todos/complete/<%=movie[index].id %>/"><button type="submit" class="btn btn-outline-primary"> Complete </button></form></td></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class= "container" >
    <table>

      <tbody id="restaurants" class="sortable">


          <th> <a> Restaurant </a> </th>

        <tr></tr>
        <% for(let index in restaurant) { %>
          <tr>
            <tr>

            </tr>

            <td>
              To eat <%= restaurant[index].description %>
            <td>
              <form method="POST" action="/api/todos/complete/<%=restaurant[index].id %>/">
                <button type="submit" class="btn btn-outline-primary"> Complete </button>
              </form>
            </td>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="container" >
    <table>
      <tbody id="books" class="sortable">
        <tr>
          <th> <a> Books </a> </th>
        </tr>

        <% for(let index in book) { %>
          <tr>
            <td>
              To read <%= book[index].description %>
            <td>
              <form method="POST" action="/api/todos/complete/<%=book[index].id %>/" >
                <button type="submit" class="btn btn-outline-primary">
                   Complete
                </button>
              </form>
            </td>
          </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="container" >
    <table>
      <tbody id="products" class="sortable">
        <tr>
          <th> <a> Products </a> </th>
        </tr>
        <% for(let index in product) { %>
          <tr>
            <td >
              To buy <%= product[index].description %>
            <td>
              <form method="POST" action="/api/todos/complete/<%=product[index].id %>/">
                <button type="submit" class="btn btn-outline-primary">
                  Complete
                </button>
              </form></td></td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
</div>
  <script>
    feather.replace()
  </script>
    <script type="text/javascript" scr="../draggableTableRows.js"></script>

  </body>
</html>
